<!-- index.html -->
    <%= render :partial => "partials/user_cover" %>

    <div class="user-main-content container">

      <!-- 側邊資訊欄位 -->
      <div class="user-sidebar">

        <!-- 使用者資料卡，包含社交按鈕 -->
        <%= render :partial => "partials/user_title_card" %>

        <!-- 使用者狀態數值 -->
        <%= render :partial => "partials/user_status_info" %>

        <!-- 等級一覽表 -->
        <%= render :partial => "partials/user_level_info" %>

        <!-- 位置資訊 -->
        <%= render :partial => "partials/user_location_info" %>

        <!-- 群組資訊 -->
        <%= render :partial => "partials/user_group_info" %>

        <!-- 誰來我家 -->
        <%= render :partial => "partials/user_visitor_info" %>

        <!-- 廣告欄位 -->
        <div class="sidebar-ad-slot">
          廣告欄位
        </div>

      </div>

      <!-- 主要資料欄位 -->
      <div class="user-main">

        <%= render :partial => "partials/user_content_tabs" %>

        <!-- 使用者狀態更新表單 -->
        <div class="user-status-form-wrapper">
          <div class="user-status-form-avatar">
            <%= image_tag 'assets/user-avatar.jpg', :class => "img-responsive img-circle" %>
          </div>
          <div class="user-status-form">
            <div class="user-name">
              <span>Tim Cook：</span>
            </div>
            <form action="">
              <div class="textarea-wrapper">
                <textarea class="form-control" placeholder="在想什麼？" rows="3"></textarea>
              </div>
              <div class="options-wrapper">
                <div class="submit-btn">
                  <button><i class="fa fa-edit"></i> 發表</button>
                </div>
                <div class="histroy-link">
                  <a href="#">歷史紀錄</a>
                </div>
              </div>
            </form>
          </div>
        </div>

        <!-- 使用者狀態留言欄位 -->
        <%= render :partial => "partials/user_status_message" %>

        <!-- 日記區塊 -->
        <div class="user-diaries-wrapper">
          <% 3.times.each do |d| %>
            <%= render :partial => "partials/user_diary" %>
          <% end %>
        </div>

        <!-- 相簿部分列表 -->
        <div class="user-album-wrapper">
          <ul>
            <% 3.times.each do |a| %>
            <li>
              <a href="#" style="background-image: url(<%= asset_path 'assets/user-album.jpg' %>);">
                <span class="user-album-description">
                  若回答的出來，我們都是實際跳下去玩的人，一時語塞，默默低頭！我因為寫了這篇稍微具體一點的文章，看似熱鬧的領域。
                </span>
              </a>
              <span class="user-album-title">相簿標題</span>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
