<!-- index.html -->

<%= render partial: "partials/hot_news_marquee" %>

<!-- slider, hot albums, latest albums, f-status, ads -->
<div class="global-index-main-wrapper container">

  <!-- slider + albums -->
  <div class="global-index-main-col">

    <%= render partial: "partials/global_index_slider" %>

    <%= render partial: "partials/global_index_album_tabs" %>

  </div>

  <!-- status + ads -->
  <div class="global-index-side-col">

    <!-- friends status -->
    <div class="global-index-friend-status-wrapper">
      <h3 class="friend-status-title">最新動態</h3>

      <% @statuses.each do |s| %>

        <!-- status unit -->
        <%= link_to user_path(s.user) do %>
        <div class="status-unit">
          <div class="avatar">
            <%= image_tag render_avatar(s.user), :class => "img-responsive img-circle" %>
          </div>
          <div class="content">
            <span class="name"><%= render_username(s.user) %></span>
            <p class="status"><%= sanitize(s.content, tags: %w(a)) %></p>
          </div>
        </div>
        <% end %>

      <% end %>

    </div>

    <!-- ads -->
    <%= render partial: "partials/ad_widget" %>

  </div>

</div>

<div class="global-index-diaries-wrapper container">

  <div class="global-index-dairies-title">
    <h3><%= image_tag "assets/index-diary-icon.png" %> 熱門日記</h3>
  </div>

  <div class="diaries-wrapper">
    <% @diaries.each do |diary| %>
      <%= render partial: 'partials/global_index_diary', locals: {diary: diary, user: diary.user} %>
    <% end %>
  </div>
</div>

