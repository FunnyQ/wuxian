<div class="user-status-form-wrapper">
  <div class="user-status-form-avatar">
    <%= image_tag render_avatar(user), :class => "img-responsive img-circle" %>
  </div>
  <div class="user-status-form">
    <div class="user-name">
      <span>
        <%= render_username(user) %>：
      </span>
    </div>

    <%= form_for status, remote: true do |f| %>
      <div class="textarea-wrapper">
        <%= f.text_area :content, :class => "form-control", :placeholder => "想說些什麼？", :row => 3 %>
      </div>
      <div class="options-wrapper">
        <div class="submit-btn">
          <%= button_to statuses_path, :method => "post" do %>
            <i class="fa fa-edit"></i> 發表
          <% end %>
        </div>
        <div class="histroy-link">
          <a href="#">歷史紀錄</a>
        </div>
      </div>
    <% end %>

  </div>
</div>
