<div class="user-status-form-wrapper">
  <div class="user-status-form-avatar">
    <% if !current_user %>
      <%= image_tag 'assets/user-avatar.jpg', :class => "img-responsive img-circle" %>
    <% else %>
      <%= image_tag render_avatar, :class => "img-responsive img-circle" %>
    <% end %>
  </div>
  <div class="user-status-form">
    <div class="user-name">
      <span>
        <% if !current_user %>
          Tim Cook：
        <% else %>
          <%= render_username %>：
        <% end %>
      </span>
    </div>
    <% if !current_user %>
      <form action="">
        <div class="textarea-wrapper">
          <textarea class="form-control" placeholder="想說些什麼？" rows="3"></textarea>
        </div>
        <div class="options-wrapper">
          <div class="submit-btn">
            <button><i class="fa fa-edit"></i> 發表</button>
          </div>
          <div class="histroy-link">
            <a href="#">歷史紀錄</a>
          </div>
        </div>
      </form>
    <% else %>
      <%= form_for current_user.statuses.new do |f| %>
        <div class="textarea-wrapper">
          <%= f.text_area :content, :class => "form-control", :placeholder => "想說些什麼？", :row => 3 %>
        </div>
        <div class="options-wrapper">
          <div class="submit-btn">
            <%= button_to statuses_path, :method => "post" do %>
              <i class="fa fa-edit"></i> 發表
            <% end %>
          </div>
          <div class="histroy-link">
            <a href="#">歷史紀錄</a>
          </div>
        </div
      <% end %>
    <% end %>
  </div>
</div>
