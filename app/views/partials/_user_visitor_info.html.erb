<div class="user-visitor-info">
  <h3 class="title">誰來我家</h3>
  <span class="more">看更多〉</span>
  <div class="visitor-list">
    <ul>
      <% @guestbook.each do |record| %>
        <% visitor = record.visitor %>
        <li>
          <%= link_to user_path(visitor) do %>
            <%= image_tag render_avatar(visitor), :class => "img-responsive img-circle" %>
          <% end %>
          <span><%= render_username(visitor) %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>

