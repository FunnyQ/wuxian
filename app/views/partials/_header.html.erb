<!-- partials/header -->
    <nav class="site-navi">
      <div class="container">

        <!-- LOGO -->
        <div class="site-navi-logo">
          <div class="site-navi-logo-wrapper">
            <h1 class="hidden">無限</h1>
            <%= image_tag 'assets/site-navi-logo.png', :class => "img-responsive" %>
          </div>
        </div>

        <!-- main menu -->
        <div class="site-navi-menu">
          <div class="site-navi-menu-main">
            <ul>
              <li class="main-menu-item">
                <%= link_to root_path do %>
                  <span><%= image_tag 'assets/site-navi-icon-home.png' %></span> 首頁
                <% end %>
              </li>
              <li class="main-menu-item"><a href="#"><span><%= image_tag 'assets/site-navi-icon-diary.png' %></span> 日記</a></li>
              <li class="main-menu-item"><a href="#"><span><%= image_tag 'assets/site-navi-icon-album.png' %></span> 相簿</a></li>
              <li class="main-menu-item"><a href="#"><span><%= image_tag 'assets/site-navi-icon-social.png' %></span> 交友</a></li>
            </ul>
          </div>
          <div class="site-navi-menu-sub">
            <ul>
              <li><a href="#">試用</a></li>
              <li><a href="#">話題</a></li>
              <li><a href="#">活動</a></li>
              <li><a href="#">票選</a></li>
            </ul>
          </div>
        </div>

        <!-- user menu -->
        <div class="site-navi-useroption">
          <% if !current_user %>
            <div class="facebook-login-btn">
              <%= link_to Settings.domain + user_omniauth_authorize_path(:facebook) do %>
                <i class="fa fa-facebook-square"></i> 透過 Facebook 立即登入
              <% end %>
            </div>
          <% else %>
            <%= link_to user_index_path do %>
              <div class="site-navi-avatar">
                <%= image_tag "https://graph.facebook.com/#{current_user.fb_id}/picture?type=large", :class => "img-responsive img-circle" %>
              </div>
              <div class="site-navi-username">
                <span><%= current_user.name %></span>
              </div>
            <% end %>
            <div class="site-navi-options">
              <a href="#"><%= image_tag 'assets/site-navi-icon-message.png' %> (<%= rand(50) %>)</a>
              <%= link_to destroy_user_session_path, :method => "delete" do %>
                <%= image_tag 'assets/site-navi-icon-logout.png' %>
              <% end %>
              <a href="#"><%= image_tag 'assets/site-navi-icon-setting.png' %></a>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
