<div class="user-status-message-wrapper">

  <!-- 使用者名稱 -->
  <div class="user-name">
    <span>
      <% if !current_user %>
        Tim Cook：
      <% else %>
        <%= current_user.name %>：
      <% end %>
    </span>
  </div>

  <!-- 附加訊息 -->
  <div class="user-status-subinfo">
    <span class="timestamp"><%= render_status_publish_time %></span> <span><%= image_tag 'assets/main-icon-viewed.png' %> 瀏覽（<%= number_with_delimiter rand(9999), :delimiter => ',' %>）</span>
  </div>

  <!-- 狀態留言 -->
  <div class="user-status-message">
    <span>
      <% if !current_user %>
        iPhone 6 是我用過最好的手機！
      <% else %>
        <%= render_status %>
      <% end %>
    </span>
  </div>

